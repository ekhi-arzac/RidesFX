<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="399.0" prefWidth="813.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.ehu.ridesfx.uicontrollers.DriverRidePanelController">
    <TableView fx:id="tblRides" layoutX="148.0" layoutY="58.0" prefHeight="200.0" prefWidth="469.0" styleClass="tableview_bootstrap" stylesheets="@../main.css">
        <columns>
            <TableColumn fx:id="qc1" prefWidth="207.0" styleClass="tableview_column_bootstrap" text="%EventDate" />
            <TableColumn fx:id="qc2" prefWidth="145.0" styleClass="tableview_column_bootstrap" text="%CreateRideGUI.LeavingFrom" />
            <TableColumn fx:id="qc3" prefWidth="114.0" styleClass="tableview_column_bootstrap" text="%CreateRideGUI.GoingTo" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
   <Button fx:id="cancelBtn" layoutX="369.0" layoutY="295.0" mnemonicParsing="false" onAction="#cancelRide" style="-fx-background-color: red; -fx-text-fill: white;" text="Cancel Ride" />
    <Button fx:id="reenableBtn" layoutX="247.0" layoutY="295.0" mnemonicParsing="false" onAction="#reenableRide" style="-fx-background-color: green; -fx-text-fill: white;" text="Re-enable Ride" />
    <Button fx:id="carPoolChatBtn" layoutX="148.0" layoutY="295.0" mnemonicParsing="false" onAction="#openChat" text="Open Chat" visible="true" />
   <Label fx:id="lblErrorMessage" layoutX="369.0" layoutY="342.0" text="Label" visible="false"/>

</AnchorPane>
