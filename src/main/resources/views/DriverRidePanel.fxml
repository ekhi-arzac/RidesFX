<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.ehu.ridesfx.uicontrollers.DriverRidePanelController">
    <TableView fx:id="tblRides" layoutX="382.0" layoutY="70.0" prefHeight="200.0" prefWidth="469.0" styleClass="tableview_bootstrap" stylesheets="@../main.css">
        <columns>
            <TableColumn fx:id="qc1" prefWidth="223.5" styleClass="tableview_column_bootstrap" text="%EventDate" />
            <TableColumn fx:id="qc2" prefWidth="97.5" styleClass="tableview_column_bootstrap" text="%CreateRideGUI.LeavingFrom" />
            <TableColumn fx:id="qc3" prefWidth="70.0" styleClass="tableview_column_bootstrap" text="%CreateRideGUI.GoingTo" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
   <Button layoutX="382.0" fx:id="cancelBtn" layoutY="295.0" mnemonicParsing="false" style="-fx-background-color: red; -fx-text-fill: white;" text="Cancel Ride" onAction="#cancelRide" visible="false"/>
    <Button layoutX="382.0" fx:id="reenableBtn" layoutY="295.0" mnemonicParsing="false" style="-fx-background-color: green; -fx-text-fill: white;" text="Reenable Ride" onAction="#reenableRide" visible="false"/>
    <Button layoutX="382.0" fx:id="carPoolChatBtn" layoutY="295.0" mnemonicParsing="false" text="Open Chat" onAction="#openChat" visible="true"/>


</AnchorPane>
