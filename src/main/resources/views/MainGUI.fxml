<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" prefHeight="450.0" prefWidth="1050.0" style="-fx-background-color: #F8F8FF;" stylesheets="@../main.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.ehu.ridesfx.uicontrollers.MainGUIController">
   <left>
      <VBox id="mainBorderpane" alignment="TOP_CENTER" styleClass="borderpane" stylesheets="@../main.css" BorderPane.alignment="TOP_CENTER">
         <children>
            <Label fx:id="selectOptionLbl" text="%SelectUseCase">
               <padding>
                  <Insets top="20.0" />
               </padding>
               <font>
                  <Font size="14.0" />
               </font></Label>
            <Button fx:id="queryRidesBtn" mnemonicParsing="false" onAction="#showQueryRides" prefHeight="26.0" prefWidth="156.0" stylesheets="@../main.css" text="%QueryRides">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="createRideBtn" mnemonicParsing="false" onAction="#showCreateRide" prefHeight="26.0" prefWidth="155.0" text="%CreateRide">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="dRidePanelBtn" mnemonicParsing="false" onAction="#showDRidePanel" prefHeight="26.0" prefWidth="155.0" text="%RidePanel">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </Button>
            <ImageView fx:id="user_icon" fitHeight="72.0" fitWidth="71.0" opacity="0.6" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@user_blue.png" />
               </image>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </ImageView>
            <Label fx:id="lblUser" text="Driver:">
               <font>
                  <Font size="14.0" />
               </font></Label>
            <Label fx:id="lblDriver" prefHeight="18.0" prefWidth="82.0" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
            <Button fx:id="logregbtn" mnemonicParsing="false" onAction="#showLogin" prefHeight="26.0" prefWidth="156.0" stylesheets="@../main.css" text="%Login/Register">
               <VBox.margin>
                  <Insets top="100.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="logoutBtn" mnemonicParsing="false" onAction="#onLogout" prefHeight="26.0" prefWidth="120.0" text="Logout">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </left>
</BorderPane>
