<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" prefHeight="450.0" prefWidth="1050.0" style="-fx-background-color: #F8F8FF;" stylesheets="@../main.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.ehu.ridesfx.uicontrollers.MainGUIController">
   <left>
      <VBox id="mainBorderpane" alignment="TOP_CENTER" styleClass="borderpane" stylesheets="@../main.css" BorderPane.alignment="TOP_CENTER">
         <children>
            <Label fx:id="selectOptionLbl" text="%SelectUseCase">
               <padding>
                  <Insets top="20.0" />
               </padding></Label>
            <Button fx:id="queryRidesBtn" mnemonicParsing="false" onAction="#showQueryRides" prefHeight="26.0" prefWidth="156.0" stylesheets="@../main.css" text="%QueryRides">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="createRidesBtn" mnemonicParsing="false" onAction="#showCreateRide" prefHeight="26.0" prefWidth="155.0" text="%CreateRide">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </Button>
            <Label text="Driver:" />
            <Label fx:id="lblDriver" prefHeight="17.0" prefWidth="143.0" text=" " />
            <Button fx:id="logregbtn" mnemonicParsing="false" onAction="#showLogin" prefHeight="26.0" prefWidth="156.0" stylesheets="@../main.css" text="%Login/Register">
               <VBox.margin>
                  <Insets top="250.0" />
               </VBox.margin>
            </Button>
            <Label text="Click here to get or offer a ride!">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </left>
</BorderPane>
