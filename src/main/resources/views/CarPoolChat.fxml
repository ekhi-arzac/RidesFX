<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="711.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.ehu.ridesfx.uicontrollers.CarPoolChatController">
    <children>
        <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.leftAnchor="50.0">
            <top>
                <HBox alignment="CENTER" prefHeight="45.0" prefWidth="600.0" spacing="10.0">
                    <children>
                  <Button mnemonicParsing="false" onAction="#back" text="&lt;- Back">
                     <HBox.margin>
                        <Insets left="-200.0" right="150.0" />
                     </HBox.margin>
                  </Button>
                        <Label text="Chat" />
                        <Label fx:id="chatName" text="Chat Name" />
                    </children>
                </HBox>
            </top>
            <center>
                <ScrollPane prefHeight="200.0" prefWidth="200.0">
                    <content>
                        <VBox fx:id="chatMessages" prefHeight="313.0" prefWidth="598.0" spacing="10.0" />
                    </content>
                </ScrollPane>
            </center>
            <bottom>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <TextField fx:id="message" prefHeight="25.0" prefWidth="400.0" />
                        <Button fx:id="send" mnemonicParsing="false" onAction="#sendMessage" text="Send" />
                    </children>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
