                  <Insets bottom="50.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="createRidesBtn" mnemonicParsing="false" onAction="#createRide" prefHeight="26.0" prefWidth="155.0" text="%CreateRide">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </Button>
            <Label text="Driver:" />
            <Label fx:id="lblDriver" prefHeight="17.0" prefWidth="143.0" text=" " />
         </children>
         <opaqueInsets>
            <Insets />
